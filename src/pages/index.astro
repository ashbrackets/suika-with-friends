<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Suika With Friends</title>
  </head>
  <body class="bg-orange-300 touch-none">
    <div class="fixed rounded-lg h-screen w-[20%]">
      <!-- <button class="bg-red-400 rounded-lg font-bold text-md p-2 m-1" id="devMode">DEV MODE</button> -->
       <div class="flex flex-col gap-8 h-full pl-4 pt-4">
        <img src="/suikawithfriendsLogoV1.png" alt="Suika With Friends Logo">
        <div id="multiplayer" class="flex flex-col gap-2 w-full rounded-lg h-fit ring-2 ring-black/20 p-4 bg-white/10">
          <p class="text-center text-white font-bold text-2xl">Multiplayer</p>
          <input type="text" placeholder="Enter Name" class="p-2 rounded-lg h-8 bg-white/60 playerName">
          <button class="host text-center w-full bg-blue-700 rounded-lg ring-2 text-white font-bold hover:ring-black/50 text-xl">Host</button>
          <input type="text" placeholder="Enter Room Code" class="roomCodeInput p-2 rounded-lg h-8 bg-white/60">
          <button class="join text-center w-full bg-blue-700 rounded-lg ring-2 hover:ring-black/50 text-white font-bold text-xl">Join</button>
          <div id="roomCodeContainer" class="mt-2 flex flex-col items-center hidden">
            <div id="roomCodeDisplay" class="text-center text-white font-bold text-lg"></div>
            <button id="copyRoomCodeBtn" class="mt-1 px-3 py-1 bg-blue-600 hover:bg-blue-800 text-white rounded-lg text-sm font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2">Copy Room Code</button>
            <span id="copyFeedback" class="text-green-200 text-xs mt-1" style="display:none;">Copied!</span>
          </div>
          <div id="playerListContainer" class="mt-4 bg-white/20 rounded-lg p-2 hidden">
            <p class="text-white font-bold text-lg mb-2">Players:</p>
            <ul class="player-names text-white text-md list-disc list-inside"></ul>
          </div>
          <button class="leave hidden text-center w-full bg-red-700 rounded-lg ring-2 hover:ring-black/50 text-white font-bold text-xl mt-2">Leave Room</button>
        </div>
        <div id="miniBoardsContainer" class="mt-4 flex flex-col gap-2"></div>
       </div>
    </div>
    <div class="flex w-screen h-screen justify-center items-center">
      <div class="game flex flex-row max-sm:flex-col-reverse justify-between">
        <div class="left-section">
          <canvas class="debugCanvas absolute" hidden></canvas>
          <canvas class="canvas overflow-auto rounded-lg"></canvas>
        </div>
        <div class="right-section flex flex-col pl-[5px] pr-[5px] w-[150px]">
          <div
            id="next-fruit"
            class="bg-[#0B2F3B] rounded-lg flex flex-col justify-center items-center"
          >
            <div class="text-center text-white font-bold text-xl pb-[3px]">
              Next Fruit
            </div>
            <div class="w-[100px] h-[100px] flex justify-center items-center">
              <img
                class="p-5 pointer-events-none select-none max-w-[100px] max-h-[100px]"
                id="next-fruit-img"
              />
            </div>
          </div>
          <div class="pt-5 flex justify-center items-center">
            <div
              id="score"
              class="text-center text-white font-bold text-xl bg-[#0B2F3B] rounded-lg w-full py-1"
            >
              Score: 0
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="../scripts/game.ts" />
    <script src="../scripts/multiplayer.ts" />
</body>
</html>
